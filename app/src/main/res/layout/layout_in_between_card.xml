<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/wild_info_transfer_watt"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="-- mW"
        android:alpha="0.8"
        android:textColor="@color/colorGrayDark"
        android:textSize="21sp"
        app:layout_constraintTop_toTopOf="@id/card_generic_implant"
        app:layout_constraintLeft_toLeftOf="@id/card_generic_charger"
        app:layout_constraintRight_toRightOf="@id/card_generic_implant"
        app:layout_constraintBottom_toTopOf="@id/wild_info_transfer_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/ic_arrow_right"
        android:id="@+id/wild_info_transfer_icon"
        app:layout_constraintTop_toBottomOf="@id/wild_info_transfer_watt"
        app:layout_constraintBottom_toTopOf="@id/wild_info_transfer_hertz"
        app:layout_constraintLeft_toLeftOf="@id/card_generic_charger"
        app:layout_constraintRight_toRightOf="@id/card_generic_implant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="2dp"
        android:id="@+id/wild_info_transfer_hertz"
        android:text="-- kHz"
        android:textColor="#FFF"
        android:textSize="21sp"
        app:layout_constraintTop_toBottomOf="@id/wild_info_transfer_icon"
        app:layout_constraintBottom_toBottomOf="@id/card_generic_implant"
        app:layout_constraintLeft_toLeftOf="@id/card_generic_charger"
        app:layout_constraintRight_toRightOf="@id/card_generic_implant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</merge>
