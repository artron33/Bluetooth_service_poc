<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ble_step_left"
        android:id="@+id/ble_step_one"
        android:background="@drawable/ic_ble_loading_step_2"
        android:gravity="center"
        android:text="1"
        android:textSize="20sp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        />

    <ImageView
        app:layout_constraintTop_toTopOf="@id/ble_step_one"
        app:layout_constraintBottom_toBottomOf="@id/ble_step_one"
        app:layout_constraintLeft_toRightOf="@id/ble_step_one"
        app:layout_constraintRight_toLeftOf="@id/ble_step_two"
        android:id="@+id/ble_step_left"
        android:background="@drawable/ic_ble_loading_step_link_background"
        android:layout_width="0dp"
        android:alpha="@dimen/ble_step_animation_alpha_unselected"
        android:layout_height="wrap_content"
        />

    <TextView
        app:layout_constraintLeft_toRightOf="@id/ble_step_left"
        app:layout_constraintRight_toLeftOf="@id/ble_step_right"
        android:id="@+id/ble_step_two"
        android:background="@drawable/ic_ble_loading_step_2"
        android:gravity="center"
        android:text="2"
        android:textSize="20sp"
        android:layout_width="48dp"
        android:alpha="@dimen/ble_step_animation_alpha_unselected"
        android:layout_height="48dp"
        />

    <ImageView
        app:layout_constraintTop_toTopOf="@id/ble_step_one"
        app:layout_constraintBottom_toBottomOf="@id/ble_step_one"
        app:layout_constraintLeft_toRightOf="@id/ble_step_two"
        app:layout_constraintRight_toLeftOf="@id/ble_step_three"
        android:id="@+id/ble_step_right"
        android:background="@drawable/ic_ble_loading_step_link_background"
        android:layout_width="0dp"
        android:alpha="@dimen/ble_step_animation_alpha_unselected"
        android:layout_height="wrap_content"
        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ble_step_right"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/ble_step_three"
        android:background="@drawable/ic_ble_loading_step_2"
        android:gravity="center"
        android:text="3"
        android:textSize="20sp"
        android:layout_width="48dp"
        android:alpha="@dimen/ble_step_animation_alpha_unselected"
        android:layout_height="48dp"
        />

</merge>
