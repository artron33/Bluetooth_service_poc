<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:text=" - - "
        android:gravity="start"
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorWithe"
        android:paddingLeft="1dp"
        android:paddingTop="2dp"
        android:paddingBottom="1dp"
        android:background="@drawable/status_border"
        />

    <ImageView
        android:layout_marginTop="24dp"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/toolbar_user_icon"
        android:gravity="right"
        android:src="@drawable/ic_user"
        android:tint="@color/colorGrayWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="24dp"
        android:layout_marginRight="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/toolbar_add_user_layout"
        android:gravity="right"
        android:textSize="18sp"
        android:textColor="@color/colorWithe"
        android:alpha=".7"
        android:id="@+id/toolbar_user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/toolbar_add_user_layout"
        android:foreground="?selectableItemBackground"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_add_user_all_layout"
        android:layout_width="42dp"
        android:layout_height="42dp" />

</merge>
